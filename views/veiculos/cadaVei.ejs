<%- include("../partials/header.ejs"); %>

<body>
    <div class="container mt-5">
        <h1 class="text-center">Cadastro de Vaga e Veículo</h1>
        
        <form action="/veiculos/registrarVeiculo/<%= id%>" method="POST">
            <div class="form-group">
                <label for="vagaSelect">Selecione a Vaga:</label>
                <select class="form-control" id="vagaSelect" name="vaga">
                    <% vagas.forEach(function(vaga) { %>
                        <option value="<%= vaga %>"><%= vaga %></option>
                    <% }); %>
                </select>
            </div>

            <h4>Informações do Veículo</h4>
            <div class="form-group">
                <label for="categoriaSelect">Categoria:</label>
                <select class="form-control" id="categoriaSelect" name="categoria">
                    <option value="carro">Carro</option>
                    <option value="moto">Moto</option>
                </select>
            </div>
            <div class="form-group">
                <label for="modeloInput">Modelo:</label>
                <input type="text" class="form-control" id="modeloInput" name="modelo" placeholder="Informe o modelo">
            </div>
            <div class="form-group">
                <label for="marcaInput">Marca:</label>
                <input type="text" class="form-control" id="marcaInput" name="marca" placeholder="Informe a marca">
            </div>
            <div class="form-group">
                <label for="placaInput">Placa:</label>
                <input type="text" class="form-control" id="placaInput" name="placa" placeholder="Informe a placa">
            </div>

            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>

</body>
</html>

